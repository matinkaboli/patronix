{% extends './layouts/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/signup.css">
{% endblock %}
{% block content %}
<h1>سلام</h1>
<form
  class="login"
  method="post"
  action="/login"
  name="login-form"
  onsubmit="return checkForm()">
  <input
    type="email"
    name="email"
    placeholder="ایمیل"
    required>
  <input
    type="password"
    name="password"
    placeholder="رمز ورود"
    maxlength="200"
    required>
  <input
    type="submit"
    value="ورود">
</form>
{% endblock %}

{% block scripts %}
{% for i in success %}
  <script>
    alert("{{ i }}")
  </script>
{% endfor %}
{% for i in error %}
  <script>
    alert("{{ i }}")
  </script>
{% endfor %}
<script src="/files/js/login.js"></script>
{% endblock %}
