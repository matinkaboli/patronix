{% extends locals.path + '/form.njk' %}

{% block head %}
{% endblock %}

{% block content %}
<h1 id="title">ورود</h1>
<div id="whole-form">
  <form
    action="#"
    method="post"
    name="login-form">
    <fieldset>
      <p>
        <input
          type="email"
          name="email"
          placeholder="ایمیل"
          required>
      </p>
      <p class="error" id="email-err">ایمیل معتبر نیست</p>
      <p>
        <input
          type="password"
          name="password"
          placeholder="رمز"
          required>
      </p>
      <p class="error" id="capslock">دکمه Caps Lock روشنه</p>
      <p><a href="/forgot">رمز رو فراموش کردی؟</a></p>
      <p><button type="submit">ورود</button></p>
      <p class="error" id="unverified">اول حسابتو تایید کن</p>
      <p class="error" id="expired">آخ آخ، حسابت منقضی شده</p>
      <p class="error" id="wrong">رمز عبور یا حساب کاربری اشتباهه</p>
      <p class="error" id="err">خطا! بعدا امتحان کن</p>
      <p class="success" id="moving">موفق! در حال رفتن به داشبورد :)</p>
    </fieldset>
  </form>
</div>
{% endblock %}

{% block scripts %}
  <script src="/files/js/login.js"></script>
  <script src="/files/js/capslock.js"></script>
{% endblock %}
