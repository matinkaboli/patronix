{% extends './layouts/index.njk' %}

{% block styles %}
{% endblock %}
{% block content %}
<form
  class="login"
  method="post"
  action="/login"
  name="login-form"
  onsubmit="return checkForm()">
  <input
    type="email"
    name="email"
    placeholder="ایمیل"
    required>
  <input
    type="password"
    name="password"
    placeholder="رمز ورود"
    maxlength="200"
    required>
  <input
    type="submit"
    value="ورود">
</form>
{% endblock %}

{% block scripts %}
<script src="/files/js/login.js"></script>
{% endblock %}
