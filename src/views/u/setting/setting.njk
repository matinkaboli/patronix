{% extends locals.path + '/u.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/setting.css">
{% endblock %}

{% block content %}
<div id="forms-container">
  <div class="whole-form" id="main-setting">
    <h1 id="title">تنظیمات</h1>
    <form
      action="/u/setting"
      method="post"
      name="setting-form">
      <fieldset>
        <p>
          <input
            type="text"
            value="{{ user.name.first }}"
            placeholder="نام"
            name="fname"
            maxlength="20"
            required>
        </p>
        <p>
          <input
            type="text"
            value="{{ user.name.last }}"
            placeholder="نام خانوادگی"
            maxlength="20"
            name="lname"
            required>
        </p>
        <p>
            <input
              type="email"
              name="email"
              value="{{ user.email }}"
              placeholder="ایمیل"
              maxlength="100"
              required>
        </p>
        <p class="error" id="email-err">ایمیل معتبر نیست</p>
        <p><button type="submit">ثبت تغییرات</button></p>
        <p class="error" id="err1">خطا! بعدا امتحان کن</p>
      </fieldset>
    </form>
  </div>
  <div class="whole-form" id="password-setting">
    <h1 id="title">تغییر رمز</h1>
      <form
        action="/u/setting/password"
        method="post"
        name="pass-form">
        <fieldset>
        <p>
          <input
            type="password"
            placeholder="رمز کنونی"
            name="oldpass"
            maxlength="200"
            required>
        </p>
        <p>
          <input
            type="password"
            placeholder="رمز جدید"
            name="newpass"
            maxlength="200"
            required>
        </p>
        <p class="error" id="pass-err">رمز باید حداقل ۸ کاراکتر باشد</p>
        <p class="error" id="capslock">دکمه Caps Lock روشنه</p>
        <button type="submit">تغییر رمز</button>
        <p class="error" id="err2">خطا! بعدا امتحان کن</p>
      </fieldset>
    </form>
  </div>
</div>
<div id="delete-form">
  <button type="submit" id="delete-account">حذف حساب</button>
  <p class="error" id="err3">خطا! بعدا امتحان کن</p>
</div>
{% endblock %}

{% block scripts %}
<script src="/files/js/lib/checkstatus.js"></script>
<script src="/files/js/capslock.js"></script>
<script src="/files/js/lib/validator.js"></script>
<script src="/files/js/setting.js"></script>
{% endblock %}
