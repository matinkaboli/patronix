{% extends locals.path + '/u.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/setting.css">
{% endblock %}

{% block content %}
<form
  action="/u/setting"
  method="post"
  name="main-form"
  onsubmit="return checkForm()">
  <div>
    <input
      type="text"
      value="{{ user.name.first }}"
      name="fname"
      maxlength="20"
      required>
      <label>نام</label>
  </div>
  <div>
    <input
      type="text"
      value="{{ user.name.last }}"
      maxlength="20"
      name="lname"
      required>
      <label>نام خانوادگی</label>
  </div>
  <div>
    <input
      type="email"
      name="email"
      value="{{ user.email }}"
      maxlength="100"
      required>
      <label>ایمیل</label>
  </div>
    <button type="submit">ثبت تغییرات</button>
</form>
<form
  action="/u/setting/password"
  method="post"
  name="pass-form"
  onsubmit="return checkPassForm()">
  <div>
    <input
      type="password"
      placeholder="رمز کنونی"
      name="oldpass"
      maxlength="200"
      required>
  </div>
  <div>
  <input
    type="password"
    placeholder="رمز جدید"
    name="newpass"
    maxlength="200"
    required>
  </div>
  <button type="submit">تغییر رمز</button>
</form>
{# <button type="submit">حذف حساب</button> #}
{% endblock %}

{% block scripts %}
<script src="/files/js/lib/validator.js"></script>
<script src="/files/js/setting.js"></script>
{% endblock %}
