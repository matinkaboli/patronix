    <meta name="author" content="Patronix Team">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/files/css/font.css">
    <link rel="stylesheet" href="/files/css/main.css">
    <link rel="stylesheet" href="/files/css/uLayout.css">
    <link rel="stylesheet" href="/files/css/inputs.css">
    <link href="/files/css/icon.css" rel="stylesheet">
    {% if title %}
    <title>@@PROJECTNAME@@ - {{ title }}</title>
    {% else %}
    <title>@@PROJECTNAME@@</title>
