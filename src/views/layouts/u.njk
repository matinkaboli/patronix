<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="پشتیبانی انلاین">
    <meta name="keywords" content="پشتیبانی,انلاین">
    <meta name="author" content="Patronix Team">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/files/css/font.css">
    <link rel="stylesheet" href="/files/css/main.css">
    <link rel="stylesheet" href="/files/css/nav.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {% if title %}
    <title>@@PROJECTNAME@@ - {{ title }}</title>
    {% else %}
    <title>@@PROJECTNAME@@</title>
    {% endif %}
    {% for item in locals.header %}
      {{ item | safe }}
    {% endfor %}

    {% block head %}
    {% endblock %}
  </head>
  <body>
    <nav>
      <ul>
        <li>
          <a href="/u">
            <i class="fa fa-user-circle" style="font-size: 47px"></i>
            <span>پنل مدیریت</span>
          </a>
        </li>
        <li>
          <a href="/u/setting">
            <i class="fa fa-cog" style="font-size: 50px"></i>
            <span>تنظیمات</span>
          </a>
        </li>
        <li>
          <a href="/u/sites">
            <i class="fa fa-globe" style="font-size: 50px"></i>
            <span>سایت ها</span>
          </a>
        </li>
      </ul>
    </nav>
    <aside>
    {% block content %}
    {% endblock %}
    </aside>
    {% for item in locals.footer %}
      {{ item | safe }}
    {% endfor %}

    <script>
    const report = {{locals.report}};
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/files/js/sook.js"></script>
    {% block scripts %}
    {% endblock %}
  </body>
</html>
