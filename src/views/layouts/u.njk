            <i class="icon-sign-out"></i>
            <span>خروج</span>
          </a>
        </li>
      </ul>
    </nav>
    <aside>
    {% block content %}
    {% endblock %}
    </aside>
    {% for item in locals.footer %}
      {{ item | safe }}
    {% endfor %}

    <script>
    const report = "{{ locals.report }}";
    </script>
