{% extends './layouts/index.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/inputs.css">
<link rel="stylesheet" href="/files/css/alert.css">
{% endblock %}

{% block content %}
<div class="alert" id="error">
</div>
<div class="alert" id="warn">
</div>
<div class="alert" id="success">
</div>
<form
  action="/resend"
  method="post"
  name="resend-form"
  onsubmit="return checkForm()">
  <input
    type="email"
    name="email"
    placeholder="ایمیل"
    required>
  <input
    type="submit"
    value="گرفتن کد فعالسازی">
</form>
{% endblock %}

{% block scripts %}
{% for i in email %}
  <script>
    document.forms['resend-form'].email.value = '{{ i }}';
  </script>
{% endfor %}
<script src="/files/js/lib/validator.js"></script>
<script src="/files/js/resend.js"></script>
{% endblock %}
