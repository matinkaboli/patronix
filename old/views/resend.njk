{% extends './layouts/form.njk' %}

{% block head %}
{% endblock %}

{% block content %}
<h1 id="title">فرستادن ایمیل تایید برای تایید حساب</h1>
<div id="whole-form">
  <form
    action="#"
    method="post"
    name="resend-form">
    <fieldset>
      <p>
        <input
          type="email"
          name="email"
          placeholder="ایمیل"
          required>
      </p>
      <p>
        <button type="submit">گرفتن کد فعالسازی</button>
      </p>
    </fieldset>
  </form>
</div>
{% endblock %}

{% block scripts %}
  <script src="/files/js/resend.js"></script>
{% endblock %}
