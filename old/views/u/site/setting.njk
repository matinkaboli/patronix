{% extends locals.path + '/u.njk' %}

{% block head %}
<link rel="stylesheet" href="/files/css/setting.css">
{% endblock %}

{% block content %}
<div id="forms-container" style="margin-top: 30px;">

  <div class="whole-form">

    <h1>تنظیمات سایت</h1>

    <form
      action="/u/site/{{site._id}}/edit"
      name="site-setting"
      method="POST">

      <fieldset>

        <p>
          <input
          type="text"
          name="name"
          placeholder="نام سایت"
          maxlength="30"
          value="{{ site.name }}">
        </p>

        <p>
          <button type="submit">ثبت</button>
        </p>

      </fieldset>

    </form>
  </div>
</div>

<div id="delete-form">
  <button type="submit" id="delete-account">حذف سایت</button>
</div>
{% endblock %}

{% block scripts %}
<script src="/files/js/site-edit.js"></script>
{% endblock %}
